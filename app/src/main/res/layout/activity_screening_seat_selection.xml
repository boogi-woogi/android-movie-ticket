<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#EAEAEA"
    tools:context=".seatselection.ScreeningSeatSelectionActivity">

    <TextView
        android:id="@+id/screen_shape"
        android:text="SCREEN"
        android:background="#494949"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_width="292dp"
        android:textSize="22sp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TableLayout
        android:layout_marginTop="56dp"
        android:id="@+id/seat_table_layout"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/screen_shape">

        <TableRow>
            <TextView
                android:text="A1"
                android:textSize="22sp"
                android:textColor="#8E13EF"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/a1_seat" />

            <TextView
                android:text="A2"
                android:textSize="22sp"
                android:textColor="#8E13EF"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/a2_seat" />

            <TextView
                android:text="A3"
                android:textSize="22sp"
                android:textColor="#8E13EF"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/a3_seat" />

            <TextView
                android:text="A4"
                android:textSize="22sp"
                android:textColor="#8E13EF"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/a4_seat" />
        </TableRow>

        <TableRow>

            <TextView
                android:text="B1"
                android:textSize="22sp"
                android:textColor="#8E13EF"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/b1_seat" />

            <TextView
                android:text="B2"
                android:textSize="22sp"
                android:textColor="#8E13EF"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/b2_seat" />

            <TextView
                android:text="B3"
                android:textSize="22sp"
                android:textColor="#8E13EF"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/b3_seat" />

            <TextView
                android:text="B4"
                android:textSize="22sp"
                android:textColor="#8E13EF"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/b4_seat" />
        </TableRow>

        <TableRow>

            <TextView
                android:text="C1"
                android:textSize="22sp"
                android:textColor="#19D358"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/c1_seat" />

            <TextView
                android:text="C2"
                android:textSize="22sp"
                android:textColor="#19D358"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/c2_seat" />

            <TextView
                android:text="C3"
                android:textSize="22sp"
                android:textColor="#19D358"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/c3_seat" />

            <TextView
                android:text="C4"
                android:textSize="22sp"
                android:textColor="#19D358"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/c4_seat" />
        </TableRow>

        <TableRow>

            <TextView
                android:text="D1"
                android:textSize="22sp"
                android:textColor="#19D358"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/d1_seat" />

            <TextView
                android:text="D2"
                android:textSize="22sp"
                android:textColor="#19D358"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/d2_seat" />

            <TextView
                android:text="D3"
                android:textSize="22sp"
                android:textColor="#19D358"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/d3_seat" />

            <TextView
                android:text="D4"
                android:textSize="22sp"
                android:textColor="#19D358"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/d4_seat" />
        </TableRow>

        <TableRow>

            <TextView
                android:text="E1"
                android:textSize="22sp"
                android:textColor="#1B48E9"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/e1_seat" />

            <TextView
                android:text="E2"
                android:textSize="22sp"
                android:textColor="#1B48E9"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/e2_seat" />

            <TextView
                android:text="E3"
                android:textSize="22sp"
                android:textColor="#1B48E9"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/e3_seat" />

            <TextView
                android:text="E4"
                android:textSize="22sp"
                android:textColor="#1B48E9"
                android:layout_width="73dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:id="@+id/e4_seat" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:background="@color/white"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:id="@+id/seat_selection_movie_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="해리포터와 마법사의 돌 "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textColor="#727272"
                tools:text="13000원"
                android:id="@+id/seat_selection_payment_amount_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/seat_selection_movie_name_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:text="확인"
            android:clickable="false"
            android:id="@+id/seat_selection_complete_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>