<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/movie_image_view"
        android:layout_width="76dp"
        android:layout_height="108dp"
        tools:src="@drawable/image_movie_poster_harry_potter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        tools:text="해리 포터"
        android:textColor="@color/black"
        android:textSize="@dimen/title_medium"
        app:layout_constraintLeft_toRightOf="@id/movie_image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_screening_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        tools:text="상영일: 1999.10.06"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium"
        app:layout_constraintLeft_toRightOf="@id/movie_image_view"
        app:layout_constraintTop_toBottomOf="@id/movie_name_text_view" />

    <TextView
        android:id="@+id/movie_running_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        tools:text="러닝타임: 150분"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium"
        app:layout_constraintLeft_toRightOf="@id/movie_image_view"
        app:layout_constraintTop_toBottomOf="@id/movie_screening_date_text_view" />

    <Button
        android:id="@+id/reservation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reserve_now_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>